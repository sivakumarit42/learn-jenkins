//node {
node ("workstation") {
    try {
    stage("one") {
        echo "one"
        sh 'exit 1'

    }

    stage('two') {
        echo "two"
      }
 } catch (e) {
    stage('Declarative: Post Actions') {
         echo 'This will run only if successful'
 }
 }
 }

// Above is Groovy Exception handling (try, catch, Exception)